{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [],
    "lib": [
      "es2016",
      "es2017",
      "dom"
    ],
    "module": "es2015",
    /* replaces deprecated no-use-before-declare */
    "noUnusedLocals": true, /* Report errors on unused locals. */
    "noUnusedParameters": true /* Report errors on unused parameters. */
  }
}