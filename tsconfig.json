{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2020",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2020",
      "dom"
    ],
    "module": "es2020",
    /* replaces deprecated no-use-before-declare */
    "noUnusedLocals": true,     /* Report errors on unused locals. */
    "noUnusedParameters": true  /* Report errors on unused parameters. */
  },
  "angularCompilerOptions": {
    "enableIvy": false          /* Must be false until we replace ng-zorro https://github.com/NG-ZORRO/ng-zorro-antd/issues/3975 */
  }
}
