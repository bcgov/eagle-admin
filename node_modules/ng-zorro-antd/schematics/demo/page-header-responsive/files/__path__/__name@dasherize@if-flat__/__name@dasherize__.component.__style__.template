
      .content {
        display: flex;
      }

      .extra > div {
        display: flex;
        width: max-content;
        justify-content: flex-end;
      }

      @media (max-width: 576px) {
        .content {
          display: block;
        }

        .main {
          width: 100%;
          margin-bottom: 12px;
        }

